@model EquipmentShop.ViewModels.LoginModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title></title>

    <meta charset="UTF-8">
    <title>Login</title>
    @*<link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>*@
    <link rel="stylesheet" href="~/css/LoginRegister.css">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body style="        background-color: #424242
">
    <!-- partial:index.partial.html -->
    <section class="forms-section">
        <div class="forms">
            <div class="form-wrapper is-active">
                @*<button type="button" class="switcher switcher-login">
                    Մուտք
                    <span class="underline"></span>
                </button>*@
                <button type="button" class="switcher switcher-login">
                    Մուտք
                    <span class="underline"></span>
                </button>
                <form class="form form-login" asp-action="SignInUser" asp-controller="Account" asp-anti-forgery="true">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="input-block">
                        <label asp-for="Email" for="login-email">Էլ-հասցե</label>
                        <input asp-for="Email" id="login-email" type="email" required>
                    </div>
                    <div class="input-block">
                        <label asp-for="Password" for="login-password">Ծածկագիր</label>
                        <input asp-for="Password" id="login-password" type="password" required>
                    </div>
                    <button type="submit" class="btn-login">Մուտք</button>
                </form>
            </div>
            <div class="form-wrapper">
              
                <a asp-action="SignUpUser" asp-controller="Account" class="switcher switcher-signup text-decoration-none " >
                    Գրանցում
                </a>
            </div>
        </div>
    </section>
    <!-- partial -->
    @*<script src="~/js/script.js"></script>*@

</body>
</html>
