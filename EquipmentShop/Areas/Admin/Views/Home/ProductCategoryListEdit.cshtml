@model Category

<!DOCTYPE html>
<html>
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

    <title></title>
</head>
<body>
    <div class=" bg-primary panel-body"><h4>Խմբագրում</h4></div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="container">
        <form asp-action="ProductCategoryListEdit" method="post">
            <div class=" form-group">
                <label asp-for="CategoryId">ID</label>
                <input asp-for="CategoryId" class=" form-control" readonly="readonly" />
            </div>

            <div class=" form-group">
                <label asp-for="CategoryName">Անվանում</label>
                <input asp-for="CategoryName" class="form-control" />
            </div>

            <button type="submit" class=" btn btn-primary"> Պահպանել</button>
        </form>
        <div style="display:flex;justify-content:flex-end;">
            <a asp-action="ProductCategoryListDelete" asp-route-id="@Model.CategoryId" class="btn btn-danger">Ջնջել</a>
            <a asp-action="ProductCategoryList" class="btn btn-outline-dark ml-2">Չեղարկել</a>
        </div>
    </div>
</body>
</html>


